{
    "name": "laminas-api-tools/api-tools-mvc-auth",
    "description": "Laminas Module providing Authentication and Authorization events and infrastructure",
    "license": "BSD-3-Clause",
    "keywords": [
        "laminas",
        "api-tools",
        "module"
    ],
    "homepage": "https://api-tools.getlaminas.org",
    "support": {
        "docs": "https://api-tools.getlaminas.org/documentation",
        "issues": "https://github.com/laminas-api-tools/api-tools-mvc-auth/issues",
        "source": "https://github.com/laminas-api-tools/api-tools-mvc-auth",
        "rss": "https://github.com/laminas-api-tools/api-tools-mvc-auth/releases.atom",
        "chat": "https://laminas.dev/chat",
        "forum": "https://discourse.laminas.dev"
    },
    "config": {
        "sort-packages": true,
        "allow-plugins": {
            "dealerdirect/phpcodesniffer-composer-installer": true
        },
        "platform": {
            "php": "8.1.99"
        }
    },
    "extra": {
        "laminas": {
            "module": "Laminas\\ApiTools\\MvcAuth"
        }
    },
    "require": {
        "php": "~8.1.0 || ~8.2.0 || ~8.3.0 || ~8.4.0",
        "laminas-api-tools/api-tools-oauth2": "^1.9",
        "laminas/laminas-authentication": "^2.17.0",
        "laminas/laminas-eventmanager": "^3.2",
        "laminas/laminas-http": "^2.5.4",
        "laminas/laminas-mvc": "^3.0.2",
        "laminas/laminas-permissions-acl": "^2.6",
        "laminas/laminas-permissions-rbac": " ^3.0",
        "laminas/laminas-servicemanager": "^3.11",
        "laminas/laminas-stdlib": "^3.0.1"
    },
    "require-dev": {
        "laminas/laminas-coding-standard": "^3",
        "laminas/laminas-session": "^2.22",
        "phpspec/prophecy-phpunit": "^2.3",
        "phpunit/phpunit": "^10",
        "psalm/plugin-phpunit": "^0.19",
        "vimeo/psalm": "^5"
    },
    "autoload": {
        "psr-4": {
            "Laminas\\ApiTools\\MvcAuth\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "LaminasTest\\ApiTools\\MvcAuth\\": "test/"
        }
    },
    "scripts": {
        "check": [
            "@cs-check",
            "@test"
        ],
        "cs-check": "phpcs",
        "cs-fix": "phpcbf",
        "static-analysis": "psalm --shepherd --stats",
        "test": "phpunit --colors=always",
        "test-coverage": "phpunit --colors=always --coverage-clover clover.xml"
    },
    "replace": {
        "zfcampus/zf-mvc-auth": "^1.5.1"
    },
    "repositories": [
      {
        "type": "git",
        "url": "https://github.com/datasage/api-tools-api-problem"
      },
      {
        "type": "git",
        "url": "https://github.com/datasage/api-tools-content-negotiation"
      },
      {
        "type": "git",
        "url": "https://github.com/datasage/api-tools-oauth2"
      }
    ]
}
